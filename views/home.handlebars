<section class="container">
    <div class="pt-5 pb-5">
        <h1 class="text-center">Cadastre o seu livro:</h1>
    </div>
    <form class="row g-3" action="/books/insertbook" method="POST">
        <div class="col-12">
            <label for="inputAddress" class="form-label">Título</label>
            <input type="text" name="title" class="form-control" id="inputAddress" placeholder="Digite o título">
        </div>
        <div class="col-12">
            <label for="inputAddress2" class="form-label">Número de páginas:</label>
            <input type="text" name="pageqty" class="form-control" id="inputAddress2" placeholder="Quantas páginas o livro tem?">
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Cadastrar</button>
        </div>
    </form>
</section>
