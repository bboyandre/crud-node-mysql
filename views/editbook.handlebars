<section class="container">
    <div class="pt-5 pb-5">
        <h1 class="text-center">Edite o seu livro:</h1>
    </div>
    <form class="row g-3" action="/books/updatebook" method="POST">
        <input type="hidden" name="id" value="{{book.id}}">
        <div class="col-12">
            <label for="inputAddress" class="form-label">Título</label>
            <input type="text" name="title" class="form-control" id="inputAddress" placeholder="Digite o título" value="{{book.title}}">
        </div>
        <div class="col-12">
            <label for="inputAddress2" class="form-label">Número de páginas:</label>
            <input type="text" name="pageqty" class="form-control" id="inputAddress2"
                placeholder="Quantas páginas o livro tem?" value="{{book.pageqty}}">
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Salvar</button>
        </div>
    </form>
</section>